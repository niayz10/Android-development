<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/second"
        app:layout_constraintVertical_weight="1"
        >
        <Button
            android:id="@+id/button_7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_7"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="@id/first"
            app:layout_constraintBottom_toTopOf="@id/button_4"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_4"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_7"
            app:layout_constraintBottom_toTopOf="@id/button_1"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_4"
            app:layout_constraintBottom_toTopOf="@id/button_0"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_1"
            app:layout_constraintBottom_toBottomOf="@id/first"
            android:onClick="onClick"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/first"
        app:layout_constraintRight_toLeftOf="@id/third"
        app:layout_constraintVertical_weight="1">

        <Button
            android:id="@+id/button_8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_8"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="@id/second"
            app:layout_constraintBottom_toTopOf="@id/button_5"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_5"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_8"
            app:layout_constraintBottom_toTopOf="@id/button_2"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_2"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_5"
            app:layout_constraintBottom_toTopOf="@id/button_dot"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_dot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dot"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_2"
            app:layout_constraintBottom_toBottomOf="@id/second"
            android:onClick="onClick"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/second"
        app:layout_constraintRight_toLeftOf="@id/fourth"
        app:layout_constraintVertical_weight="1">

        <Button
            android:id="@+id/button_9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="@id/third"
            app:layout_constraintBottom_toTopOf="@id/button_6"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_6"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_9"
            app:layout_constraintBottom_toTopOf="@id/button_3"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_3"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/button_6"
            app:layout_constraintBottom_toTopOf="@id/button_egual"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button_egual"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/equal"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:onClick="onResult"
            app:layout_constraintTop_toBottomOf="@id/button_3"
            app:layout_constraintBottom_toBottomOf="@id/third"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#DAD8D8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/third"
        app:layout_constraintRight_toLeftOf="@id/fourth"
        app:layout_constraintVertical_weight="1"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1">

        <Button
            android:id="@+id/button_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@android:string/cancel"
            app:icon="@android:drawable/ic_input_delete"
            app:iconTint="#31BFFF"
            android:onClick="onErase"
            app:layout_constraintTop_toTopOf="@id/fourth"
            app:layout_constraintBottom_toTopOf="@id/button_div"
            />

        <Button
            android:id="@+id/button_div"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textColor="#31BFFF"
            android:textSize="24sp"
            android:onClick="onAction"
            app:layout_constraintTop_toBottomOf="@id/button_back"
            app:layout_constraintBottom_toTopOf="@id/button_mult"
            />

        <Button
            android:id="@+id/button_mult"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="@string/multiply"
            android:textColor="#31BFFF"
            android:onClick="onAction"
            app:layout_constraintTop_toBottomOf="@id/button_div"
            app:layout_constraintBottom_toTopOf="@id/button_minus"/>

        <Button
            android:id="@+id/button_minus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textColor="#31BFFF"
            android:textSize="24sp"
            android:onClick="onAction"
            app:layout_constraintTop_toBottomOf="@id/button_mult"
            app:layout_constraintBottom_toTopOf="@id/button_plus"/>

        <Button
            android:id="@+id/button_plus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plus"
            android:textColor="#31BFFF"
            android:textSize="24sp"
            android:onClick="onAction"
            app:layout_constraintTop_toBottomOf="@id/button_minus"
            app:layout_constraintBottom_toBottomOf="@id/fourth"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>